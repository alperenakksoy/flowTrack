{% extends 'base.html.twig' %}

{% block title %}User Profile - FlowTrack{% endblock %}

{% block body %}
    <div class="container-fluid px-4 py-5">

        <!-- Profile Header -->
        <div class="row mb-5">
            <div class="col">
                <div class="profile-header rounded-4 overflow-hidden">
                    <div class="profile-cover position-relative">
                        <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
                    </div>
                    <div class="profile-info p-4">
                        <div class="d-flex align-items-end gap-4 flex-wrap">
                            <div class="profile-avatar-wrapper">
                                <div class="profile-avatar rounded-circle bg-white d-flex align-items-center justify-content-center">
                            <span class="display-4 fw-bold text-primary">
                                {{ user.firstName|first|upper }}{{ user.lastName|first|upper }}
                            </span>
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <h2 class="fw-bold mb-1">{{ user.firstName }} {{ user.lastName }}</h2>
                                <p class="text-muted mb-2">
                                    <i class="fas fa-envelope me-2"></i>{{ user.email }}
                                </p>
                                <div class="d-flex gap-2 flex-wrap">
                                    {% for role in user.roles %}
                                        {% if role != 'ROLE_USER' %}
                                            <span class="badge bg-primary rounded-pill">
                                        {{ role|replace({'ROLE_': ''})|title }}
                                    </span>
                                        {% endif %}
                                    {% endfor %}
                                    {% if user.team %}
                                        <span class="badge bg-info rounded-pill">
                                    <i class="fas fa-users me-1"></i>{{ user.team.teamName }}
                                </span>
                                    {% endif %}
                                </div>
                            </div>
                            <div>
                                <a href="#" class="btn btn-primary rounded-pill px-4">
                                    <i class="fas fa-edit me-2"></i>Edit Profile
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <!-- Left Column - Profile Details -->
            <div class="col-lg-4">
                <!-- Personal Information -->
                <div class="content-card rounded-4 overflow-hidden mb-4">
                    <div class="card-header-custom p-4 border-bottom">
                        <h5 class="fw-bold mb-0">
                            <i class="fas fa-user me-2 text-primary"></i>Personal Information
                        </h5>
                    </div>
                    <div class="p-4">
                        <div class="info-item mb-3">
                            <label class="text-muted small d-block mb-1">First Name</label>
                            <p class="fw-semibold mb-0">{{ user.firstName }}</p>
                        </div>
                        <div class="info-item mb-3">
                            <label class="text-muted small d-block mb-1">Last Name</label>
                            <p class="fw-semibold mb-0">{{ user.lastName }}</p>
                        </div>
                        <div class="info-item mb-3">
                            <label class="text-muted small d-block mb-1">Email Address</label>
                            <p class="fw-semibold mb-0">{{ user.email }}</p>
                        </div>
                        <div class="info-item mb-3">
                            <label class="text-muted small d-block mb-1">Account Created</label>
                            <p class="fw-semibold mb-0">
                                {{ user.createdAt ? user.createdAt|date('F d, Y') : 'N/A' }}
                            </p>
                        </div>
                        <div class="info-item">
                            <label class="text-muted small d-block mb-1">Last Updated</label>
                            <p class="fw-semibold mb-0">
                                {{ user.updatedAt ? user.updatedAt|date('F d, Y') : 'N/A' }}
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Team Information -->
                {% if user.team %}
                    <div class="content-card rounded-4 overflow-hidden mb-4">
                        <div class="card-header-custom p-4 border-bottom">
                            <h5 class="fw-bold mb-0">
                                <i class="fas fa-users me-2 text-success"></i>Team Information
                            </h5>
                        </div>
                        <div class="p-4">
                            <div class="info-item mb-3">
                                <label class="text-muted small d-block mb-1">Team Name</label>
                                <p class="fw-semibold mb-0">{{ user.team.teamName }}</p>
                            </div>
                            <div class="info-item mb-3">
                                <label class="text-muted small d-block mb-1">Team Manager</label>
                                <p class="fw-semibold mb-0">
                                    {% if user.team.manager %}
                                        {{ user.team.manager.firstName }} {{ user.team.manager.lastName }}
                                    {% else %}
                                        <span class="text-muted">No manager assigned</span>
                                    {% endif %}
                                </p>
                            </div>
                            <div class="info-item">
                                <label class="text-muted small d-block mb-1">Team Members</label>
                                <p class="fw-semibold mb-0">{{ user.team.members|length }} members</p>
                            </div>
                        </div>
                    </div>
                {% endif %}

                <!-- Roles & Permissions -->
                <div class="content-card rounded-4 overflow-hidden">
                    <div class="card-header-custom p-4 border-bottom">
                        <h5 class="fw-bold mb-0">
                            <i class="fas fa-shield-alt me-2 text-warning"></i>Roles & Permissions
                        </h5>
                    </div>
                    <div class="p-4">
                        <div class="d-flex flex-wrap gap-2">
                            {% for role in user.roles %}
                                <span class="badge bg-light text-dark border px-3 py-2">
                                    <i class="fas fa-check-circle me-1 text-success"></i>
                                    {{ role|replace({'ROLE_': ''})|title }}
                                </span>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Activity & Statistics -->
            <div class="col-lg-8">
                <!-- Statistics Cards -->
                <div class="row g-4 mb-4">
                    <div class="col-md-4">
                        <div class="stat-card p-4 rounded-4 h-100">
                            <div class="d-flex align-items-center gap-3">
                                <div class="stat-icon bg-primary bg-opacity-10 rounded-3 p-3">
                                    <i class="fas fa-tasks fa-2x text-primary"></i>
                                </div>
                                <div>
                                    <h3 class="fw-bold mb-0">{{ user.assignedTasks|length }}</h3>
                                    <p class="text-muted small mb-0">Assigned Tasks</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card p-4 rounded-4 h-100">
                            <div class="d-flex align-items-center gap-3">
                                <div class="stat-icon bg-success bg-opacity-10 rounded-3 p-3">
                                    <i class="fas fa-bullseye fa-2x text-success"></i>
                                </div>
                                <div>
                                    <h3 class="fw-bold mb-0">{{ user.goals|length }}</h3>
                                    <p class="text-muted small mb-0">Active Goals</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card p-4 rounded-4 h-100">
                            <div class="d-flex align-items-center gap-3">
                                <div class="stat-icon bg-info bg-opacity-10 rounded-3 p-3">
                                    <i class="fas fa-user-edit fa-2x text-info"></i>
                                </div>
                                <div>
                                    <h3 class="fw-bold mb-0">{{ user.createdTasks|length }}</h3>
                                    <p class="text-muted small mb-0">Created Tasks</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Tasks -->
                <div class="content-card rounded-4 overflow-hidden mb-4">
                    <div class="card-header-custom p-4 border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="fw-bold mb-0">
                                <i class="fas fa-clipboard-list me-2 text-primary"></i>Recent Assigned Tasks
                            </h5>
                            <a href="#" class="btn btn-sm btn-outline-primary rounded-pill">
                                View All
                                <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                    <div class="p-4">
                        {% if user.assignedTasks|length > 0 %}
                            <div class="tasks-list">
                                {% for task in user.assignedTasks|slice(0, 5) %}
                                    <div class="task-item-simple p-3 rounded-3 mb-2">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="flex-grow-1">
                                                <h6 class="fw-semibold mb-1">{{ task.title }}</h6>
                                                <div class="d-flex gap-2 flex-wrap">
                                                    <span class="badge {{ task.status == 'in_progress' ? 'bg-primary' : (task.status == 'completed' ? 'bg-success' : 'bg-danger') }} rounded-pill">
                                                        {{ task.status|replace({'_': ' '})|title }}
                                                    </span>
                                                    {% if task.priority == 3 %}
                                                        <span class="badge bg-danger rounded-pill">High</span>
                                                    {% elseif task.priority == 2 %}
                                                        <span class="badge bg-warning text-dark rounded-pill">Medium</span>
                                                    {% else %}
                                                        <span class="badge bg-secondary rounded-pill">Low</span>
                                                    {% endif %}
                                                    {% if task.dueDate %}
                                                        <span class="badge bg-light text-dark rounded-pill">
                                                            <i class="far fa-calendar me-1"></i>{{ task.dueDate|date('M d, Y') }}
                                                        </span>
                                                    {% endif %}
                                                </div>
                                            </div>
                                            <a href="{{ path('task_show', {'id': task.id}) }}" class="btn btn-sm btn-outline-primary rounded-pill ms-3">
                                                <i class="fas fa-eye"></i>
                                            </a>

                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="empty-state text-center py-4">
                                <i class="fas fa-tasks fa-3x text-muted mb-3 opacity-25"></i>
                                <p class="text-muted">No tasks assigned yet</p>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Recent Goals -->
                <div class="content-card rounded-4 overflow-hidden">
                    <div class="card-header-custom p-4 border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="fw-bold mb-0">
                                <i class="fas fa-bullseye me-2 text-success"></i>Recent Goals
                            </h5>
                            <a href="#" class="btn btn-sm btn-outline-success rounded-pill">
                                View All
                                <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                    <div class="p-4">
                        {% if user.goals|length > 0 %}
                            <div class="goals-list">
                                {% for goal in user.goals|slice(0, 5) %}
                                    <div class="goal-item-simple p-3 rounded-3 mb-2">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="fw-semibold mb-0">{{ goal.description }}</h6>
                                            <span class="badge {% if goal.status == 'in_progress' %}bg-primary{% elseif goal.status == 'closed' %}bg-success{% else %}bg-secondary{% endif %} rounded-pill">
                                                {{ goal.status|replace({'_': ' '})|title }}
                                            </span>
                                        </div>
                                        <div class="progress rounded-pill mb-2" style="height: 8px;">
                                            {% set progressPercentage = goal.targetValue > 0 ? (goal.progress / goal.targetValue * 100)|round : 0 %}
                                            <div class="progress-bar rounded-pill {% if progressPercentage >= 100 %}bg-success{% elseif progressPercentage >= 75 %}bg-info{% elseif progressPercentage >= 40 %}bg-warning{% else %}bg-danger{% endif %}"
                                                 style="width: {{ progressPercentage }}%;">
                                            </div>
                                        </div>
                                        <small class="text-muted">
                                            {{ goal.progress }} / {{ goal.targetValue }} {{ goal.unit }} ({{ progressPercentage }}%)
                                        </small>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="empty-state text-center py-4">
                                <i class="fas fa-bullseye fa-3x text-muted mb-3 opacity-25"></i>
                                <p class="text-muted">No goals set yet</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --shadow-sm: 0 2px 8px rgba(0,0,0,0.04);
            --shadow-md: 0 4px 16px rgba(0,0,0,0.08);
            --shadow-lg: 0 8px 24px rgba(0,0,0,0.12);
        }

        body {
            background: #f8f9fc;
        }

        .profile-header {
            background: white;
            box-shadow: var(--shadow-md);
            overflow: visible;
        }

        .profile-cover {
            height: 180px;
            position: relative;
        }

        .profile-info {
            position: relative;
            padding-top: 1rem;
        }

        .profile-avatar-wrapper {
            margin-top: -90px;
        }

        .profile-avatar {
            width: 160px;
            height: 160px;
            border: 6px solid white;
            box-shadow: var(--shadow-md);
        }

        .profile-avatar span {
            line-height: 1;
            font-size: 4rem;
        }

        .content-card {
            background: white;
            border: 1px solid rgba(0,0,0,0.06);
            box-shadow: var(--shadow-sm);
        }

        .card-header-custom {
            background: linear-gradient(135deg, #f8f9fc 0%, #ffffff 100%);
        }

        .stat-card {
            background: white;
            border: 1px solid rgba(0,0,0,0.06);
            box-shadow: var(--shadow-sm);
            transition: all 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-md);
        }

        .stat-icon {
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Task & Goal Items */
        .task-item-simple, .goal-item-simple {
            background: #f8f9fc;
            border: 1px solid rgba(0,0,0,0.04);
            transition: all 0.2s ease;
        }

        .task-item-simple:hover, .goal-item-simple:hover {
            background: white;
            border-color: rgba(102, 126, 234, 0.2);
            box-shadow: var(--shadow-sm);
        }

        .info-item {
            padding-bottom: 1rem;
            border-bottom: 1px solid rgba(0,0,0,0.06);
        }

        .info-item:last-child {
            padding-bottom: 0;
            border-bottom: none;
        }

        /* Progress Bars */
        .progress {
            background: rgba(0,0,0,0.05);
        }

        .btn {
            font-weight: 500;
            transition: all 0.2s ease;
        }

        .btn-primary {
            background: var(--gradient-primary);
            border: none;
            box-shadow: 0 2px 8px rgba(102, 126, 234, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

        .btn-outline-primary {
            border-color: #667eea;
            color: #667eea;
        }

        .btn-outline-primary:hover {
            background: var(--gradient-primary);
            border-color: transparent;
            color: white;
        }

        .btn-outline-success {
            border-color: #10b981;
            color: #10b981;
        }

        .btn-outline-success:hover {
            background: #10b981;
            border-color: transparent;
            color: white;
        }

        .empty-state {
            padding: 2rem 1rem;
        }

        .badge {
            font-weight: 500;
            padding: 0.375rem 0.75rem;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .profile-avatar {
                width: 120px;
                height: 120px;
            }

            .profile-info {
                margin-top: -60px;
            }

            .profile-avatar span {
                font-size: 2rem !important;
            }
        }
    </style>
{% endblock %}
