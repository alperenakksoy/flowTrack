{% extends 'base.html.twig' %}

{% block title %}Dashboard - FlowTrack{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-4 display-6">Welcome, {{ user.firstName }}! </h1>

        {# Key Metrics Row #}
        <div class="row g-4 mb-4">
            {# Open Tasks #}
            <div class="col-lg-4 col-md-6">
                <div class="metric-card">
                    <div class="icon icon-danger">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div>
                        <div class="metric-value">{{ dashboardData.taskStatistics.openTasks ?? 0 }}</div>
                        <div class="metric-label">Open Tasks</div>
                    </div>
                </div>
            </div>
            {# In Progress Tasks #}
            <div class="col-lg-4 col-md-6">
                <div class="metric-card">
                    <div class="icon icon-warning">
                        <i class="fas fa-tasks"></i>
                    </div>
                    <div>
                        <div class="metric-value">{{ dashboardData.taskStatistics.onGoingTasks ?? 0 }}</div>
                        <div class="metric-label">Tasks In Progress</div>
                    </div>
                </div>
            </div>
            {# Weekly Goal Progress #}
            <div class="col-lg-4 col-md-12">
                <div class="metric-card">
                    <div class="icon icon-info">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div>
                        <div class="metric-value">{{ dashboardData.goalStatistics.AverageWeeklyProgress }}%</div>
                        <div class="metric-label">This Week's Goal Progress</div>
                    </div>
                </div>
            </div>
        </div>
        {# Main Content Area - Tabs #}
        <ul class="nav nav-pills dashboard-nav mb-4" id="dashboardTab" role="tablist">
            <li class="nav-item flex-fill" role="presentation">
                <button class="nav-link active w-100" id="weekly-goals-tab" data-bs-toggle="tab" data-bs-target="#weekly-goals" type="button" role="tab" aria-controls="weekly-goals" aria-selected="true">
                    <i class="fas fa-calendar-check me-2"></i> This Week's Goals
                </button>
            </li>
            <li class="nav-item flex-fill" role="presentation">
                <button class="nav-link w-100" id="active-tasks-tab" data-bs-toggle="tab" data-bs-target="#active-tasks" type="button" role="tab" aria-controls="active-tasks" aria-selected="false">
                    <i class="fas fa-clipboard-list me-2"></i> Active Tasks
                </button>
            </li>
            <li class="nav-item flex-fill" role="presentation">
                <button class="nav-link w-100" id="all-goals-tab" data-bs-toggle="tab" data-bs-target="#all-goals" type="button" role="tab" aria-controls="all-goals" aria-selected="false">
                    <i class="fas fa-history me-2"></i> Recent Goals
                </button>
            </li>
        </ul>

        {# Tab Content Card #}
        <div class="card dashboard-content-card">
            <div class="card-body p-4">
                <div class="tab-content" id="dashboardTabContent">

                    {# Weekly Goals Tab Pane #}
                    <div class="tab-pane fade show active" id="weekly-goals" role="tabpanel" aria-labelledby="weekly-goals-tab">
                        <h4 class="mb-3 fw-normal">Goals for Week {{ dashboardData.goalStatistics.currentWeek }}, {{ dashboardData.goalStatistics.currentYear }}</h4>
                        {% if dashboardData.goalStatistics.weeklyGoals is defined and dashboardData.goalStatistics.weeklyGoals is not empty %}
                            <div class_name="goal-list">
                                {% for goal in dashboardData.goalStatistics.weeklyGoals %}
                                    <div class="goal-list-item">
                                        <div class="d-flex w-100 justify-content-between mb-2">
                                            <h6 class="mb-0 fw-medium">{{ goal.description|raw }}</h6>
                                            <span class="badge rounded-pill {% if goal.status == 'in_progress' %}bg-primary-subtle text-primary-emphasis{% elseif goal.status == 'closed' %}bg-success-subtle text-success-emphasis{% else %}bg-secondary-subtle text-secondary-emphasis{% endif %}">{{ goal.status|replace({'_': ' '})|title }}</span>
                                        </div>
                                        <div class="progress mb-1">
                                            <div class="progress-bar {% if goal.progressPercentage >= 100 %}bg-success{% elseif goal.progressPercentage >= 75 %}bg-info{% elseif goal.progressPercentage >= 40 %}bg-warning{% else %}bg-danger{% endif %}"
                                                 role="progressbar" style="width: {{ goal.progressPercentage }}%;"
                                                 aria-valuenow="{{ goal.progressPercentage }}" aria-valuemin="0" aria-valuemax="100">
                                            </div>
                                        </div>
                                        <small class="text-muted">Current: {{ goal.progress }} / Target: {{ goal.targetValue }} {{ goal.unit }} ({{ goal.progressPercentage }}%)</small>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="alert alert-light text-center" role="alert">
                                ‚ú® No goals set for this week. Time to plan!
                            </div>
                        {% endif %}
                    </div>

                    {# Active Tasks Tab Pane #}
                    <div class="tab-pane fade" id="active-tasks" role="tabpanel" aria-labelledby="active-tasks-tab">
                        <h4 class="mb-3 fw-normal">Your Open & In-Progress Tasks</h4>
                        {% set activeTasks = dashboardData.tasks|filter(task => task.status in ['open', 'in_progress']) %}
                        {% if activeTasks is not empty %}
                            <div class="table-responsive">
                                <table class="task-table align-middle">
                                    <thead>
                                    <tr>
                                        <th style="width: 35%;">Title</th>
                                        <th>Status</th>
                                        <th>Priority</th>
                                        <th>Due Date</th>
                                        <th style="width: 30%;">Description</th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for task in activeTasks %}
                                        <tr>
                                            <td class="fw-medium">{{ task.title }}</td>
                                            <td><span class="badge rounded-pill {{ task.status == 'in_progress' ? 'bg-primary-subtle text-primary-emphasis' : 'bg-danger-subtle text-danger-emphasis' }}">{{ task.status|replace({'_': ' '})|title }}</span></td>
                                            <td>
                                                {% if task.priority == 3 %}<span class="badge bg-danger-subtle text-danger-emphasis rounded-pill">High</span>
                                                {% elseif task.priority == 2 %}<span class="badge bg-warning-subtle text-warning-emphasis rounded-pill">Medium</span>
                                                {% else %}<span class="badge bg-secondary-subtle text-secondary-emphasis rounded-pill">Low</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ task.dueDate ? task.dueDate|date('M d, Y') : '‚Äì' }}</td>
                                            <td class="task-description-snippet">
                                                {{ task.description ? (task.description|striptags|slice(0, 60) ~ (task.description|striptags|length > 60 ? '‚Ä¶'))|raw : '‚Äì' }}
                                            </td>
                                            <td class="text-end">
                                                <button class="btn btn-sm btn-link text-secondary text-decoration-none" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <div class="alert alert-light text-center" role="alert">
                                üëç No active tasks. All caught up!
                            </div>
                        {% endif %}
                    </div>

                    {# All Goals Tab Pane #}
                    <div class="tab-pane fade" id="all-goals" role="tabpanel" aria-labelledby="all-goals-tab">
                        <h4 class="mb-3 fw-normal">Your Recent Goals (History)</h4>
                        {% if dashboardData.goals is defined and dashboardData.goals is not empty %}
                            <div class="goal-list">
                                {% for goal in dashboardData.goals|slice(0, 15) %}
                                    <div class="goal-list-item {% if goal.status == 'cancelled'%} opacity-75 {% endif %}">
                                        <div class="d-flex w-100 justify-content-between mb-2">
                                            <h6 class="mb-0 fw-medium"><span class="text-muted fw-normal">W{{ goal.week }}, {{ goal.year }}:</span> {{ goal.description|raw }}</h6>
                                            <span class="badge rounded-pill {% if goal.status == 'in_progress' %}bg-primary-subtle text-primary-emphasis{% elseif goal.status == 'closed' %}bg-success-subtle text-success-emphasis{% elseif goal.status == 'cancelled' %}bg-secondary-subtle text-secondary-emphasis{% else %}bg-info-subtle text-info-emphasis{% endif %}">{{ goal.status|replace({'_': ' '})|title }}</span>
                                        </div>
                                        {% if goal.status != 'cancelled' %}
                                            <div class="progress mb-1">
                                                <div class="progress-bar {% if goal.progressPercentage >= 100 %}bg-success{% elseif goal.progressPercentage >= 75 %}bg-info{% elseif goal.progressPercentage >= 40 %}bg-warning{% else %}bg-danger{% endif %}"
                                                     role="progressbar" style="width: {{ goal.progressPercentage }}%;"
                                                     aria-valuenow="{{ goal.progressPercentage }}" aria-valuemin="0" aria-valuemax="100">
                                                </div>
                                            </div>
                                            <small class="text-muted">Progress: {{ goal.progress }} / {{ goal.targetValue }} {{ goal.unit }} ({{ goal.progressPercentage }}%)</small>
                                        {% else %}
                                            <small class="text-muted fst-italic">Cancelled</small>
                                        {% endif %}
                                    </div>
                                {% endfor %}
                            </div>
                            {% if dashboardData.goals|length > 15 %}
                                <div class="text-center mt-4">
                                    <a href="#" class="btn btn-outline-primary btn-sm">View Full Goal History <i class="fas fa-arrow-right ms-1"></i></a>
                                </div>
                            {% endif %}
                        {% else %}
                            <div class="alert alert-light text-center" role="alert">
                                ü§î No goal history found yet.
                            </div>
                        {% endif %}
                    </div>

                </div> {# End Tab Content #}
            </div> {# End Card Body #}
        </div> {# End Card #}

    </div> {# End Container #}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# Bootstrap JS (already included in parent if configured there) #}
    {# <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script> #}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# Font Awesome CSS (already included in parent, but kept here for clarity if needed) #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        :root {
            --bs-primary: #0d6efd;
            --bs-primary-rgb: 13, 110, 253;
            --bs-danger-subtle: #f8d7da;
            --bs-danger-emphasis: #842029;
            --bs-warning-subtle: #fff3cd;
            --bs-warning-emphasis: #664d03;
            --bs-info-subtle: #cff4fc;
            --bs-info-emphasis: #055160;
            --bs-shadow-soft: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.04);
            --bs-border-radius-lg: 0.75rem;
            --bs-border-color-light: #f1f3f5;
        }

        body {
            background-color: #f8f9fa; /* Lighter background */
        }

        /* --- Metric Cards --- */
        .metric-card {
            background-color: #ffffff;
            border: none;
            border-radius: var(--bs-border-radius-lg);
            box-shadow: var(--bs-shadow-soft);
            padding: 1.5rem;
            display: flex;
            align-items: center;
            transition: transform 0.2s ease-in-out;
        }
        .metric-card:hover {
            transform: translateY(-3px);
        }
        .metric-card .icon {
            font-size: 1.75rem; /* Smaller icon */
            width: 50px;
            height: 50px;
            display: grid;
            place-items: center;
            border-radius: 50%; /* Circular icon bg */
            margin-right: 1.25rem;
        }
        .metric-card .metric-value {
            font-size: 2rem;
            font-weight: 600;
            line-height: 1;
            color: #212529;
        }
        .metric-card .metric-label {
            font-size: 0.9rem;
            color: #6c757d;
        }
        /* Icon Colors */
        .icon-danger { background-color: var(--bs-danger-subtle); color: var(--bs-danger-emphasis); }
        .icon-warning { background-color: var(--bs-warning-subtle); color: var(--bs-warning-emphasis); }
        .icon-info { background-color: var(--bs-info-subtle); color: var(--bs-info-emphasis); }


        /* --- Dashboard Navigation (Tabs) --- */
        .dashboard-nav.nav-pills {
            background-color: #ffffff;
            padding: 0.5rem;
            border-radius: var(--bs-border-radius-lg);
            box-shadow: var(--bs-shadow-soft);
        }
        .dashboard-nav .nav-link {
            color: #495057;
            font-weight: 500;
            border-radius: 0.6rem; /* Slightly more rounded */
        }
        .dashboard-nav .nav-link.active {
            background-color: var(--bs-primary);
            color: #fff;
            box-shadow: 0 0.125rem 0.5rem rgba(var(--bs-primary-rgb), 0.3);
        }
        .dashboard-nav .nav-link i {
            width: 20px; /* Align icons */
        }

        /* --- Tab Content Card --- */
        .dashboard-content-card {
            background-color: #fff;
            border: none;
            border-radius: var(--bs-border-radius-lg);
            box-shadow: var(--bs-shadow-soft);
        }

        /* --- Goal List --- */
        .goal-list-item {
            padding: 1.25rem 0;
            border-bottom: 1px solid var(--bs-border-color-light);
        }
        .goal-list-item:last-child {
            border-bottom: none;
            padding-bottom: 0;
        }
        .goal-list-item:first-child {
            padding-top: 0;
        }
        .goal-list-item .progress {
            height: 8px; /* Thinner progress bar */
            border-radius: 4px;
        }

        /* --- Task Table --- */
        .task-table {
            width: 100%;
            vertical-align: middle;
            border-collapse: separate; /* Allows removing borders */
            border-spacing: 0;
        }
        .task-table th {
            font-weight: 600;
            color: #6c757d;
            font-size: 0.85em;
            text-transform: uppercase;
            padding: 0.75rem 1rem;
            border-bottom: 2px solid #dee2e6; /* Header separator */
            text-align: left;
        }
        .task-table td {
            padding: 1rem 1rem;
            border-bottom: 1px solid var(--bs-border-color-light); /* Row separator */
            background-color: #fff;
        }
        .task-table tbody tr:last-child td {
            border-bottom: none;
        }
        .task-table .task-description-snippet {
            font-size: 0.9em;
            color: #6c757d;
        }

        .badge {
            font-size: 0.8em;
            font-weight: 500;
        }

        .alert-light {
            background-color: #f8f9fa;
            border: none;
        }
    </style>
{% endblock %}

