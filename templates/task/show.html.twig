{% extends 'base.html.twig' %}

{% block title %}Task Details - {{ task.title }}{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h1 class="h4 mb-0 text-primary">
                            <i class="fas fa-tasks me-2"></i>{{ task.title }}
                        </h1>

                        <div class="d-flex gap-2">
                            <a href="{{ path('task_edit', {'id': task.id}) }}" class="btn btn-sm btn-primary">
                                <i class="fas fa-edit me-1"></i> Edit
                            </a>
                            <a href="{{ path('dashboard') }}" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back
                            </a>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <h5 class="fw-bold mb-2">Description</h5>
                                <div class="p-3 bg-light border rounded">
                                    {{ task.description ? task.description|raw : 'No description provided.' }}
                                </div>
                            </div>

                            <div class="col-md-4">
                                <h5 class="fw-bold mb-3">Details</h5>
                                <dl class="row">
                                    <dt class="col-sm-5">Status:</dt>
                                    <dd class="col-sm-7">
                                        {% set status_color = {
                                            'open': 'danger',
                                            'in_progress': 'info',
                                            'closed': 'success'
                                        }[task.status]|default('secondary') %}
                                        <span class="badge bg-{{ status_color }}">
                                            {{ task.status|replace({'_': ' '})|title }}
                                        </span>
                                    </dd>

                                    <dt class="col-sm-5">Priority:</dt>
                                    <dd class="col-sm-7">
                                        {% set priority_color = {
                                            1: 'secondary',
                                            2: 'warning text-dark',
                                            3: 'danger'
                                        }[task.priority]|default('secondary') %}
                                        <span class="badge bg-{{ priority_color }}">
                                            {{ task.priorityLabel }}
                                        </span>
                                    </dd>

                                    <dt class="col-sm-5">Assigned To:</dt>
                                    <dd class="col-sm-7">
                                        {{ task.assignedTo ? task.assignedTo : 'Unassigned' }}
                                    </dd>

                                    <dt class="col-sm-5">Created By:</dt>
                                    <dd class="col-sm-7">
                                        {{ task.createdBy ? task.createdBy : 'Unknown' }}
                                    </dd>

                                    <dt class="col-sm-5">Due Date:</dt>
                                    <dd class="col-sm-7">
                                        {{ task.dueDate ? task.dueDate|date('F j, Y, g:i A') : 'N/A' }}
                                    </dd>

                                    <dt class="col-sm-5">Last Updated:</dt>
                                    <dd class="col-sm-7">
                                        {{ task.updatedAt ? task.updatedAt|date('F j, Y, g:i A') : 'N/A' }}
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer text-muted small">
                        <i class="fas fa-clock me-1"></i>
                        Created on {{ task.createdAt ? task.createdAt|date('F j, Y, g:i A') : 'Unknown' }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
